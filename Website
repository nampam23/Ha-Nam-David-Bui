    <script>
        const cvData = {
            contact: {
                phone: "+49 15560053141",
                email: "namdv207@gmail.com",
                address: "Landsberger Allee 181, 10369 Berlin"
            },
            summary: "Highly motivated and adaptable individual with a strong foundation in customer service, event organization, and teamwork. Possessing excellent communication, analytical thinking, and time management skills, eager to apply a flexible and resilient approach to new challenges.",
            timeline: [
                {
                    type: 'Work',
                    title: 'Teacher',
                    company: 'GoStudent, Remote',
                    date: 'December 2024 ‚Äì May 2025',
                    details: [
                        'Provided online tutoring and educational support to students.',
                        'Developed strong communication and pedagogical skills in a virtual environment.'
                    ]
                },
                {
                    type: 'Work',
                    title: 'Event Assistant',
                    company: 'Rockit GmbH, Berlin',
                    date: 'June 2024 ‚Äì December 2024',
                    details: [
                        'Provided comprehensive service and support during events.',
                        'Focused on customer satisfaction and positive client interactions.',
                        'Assisted with the organization and execution of various events.',
                        'Collaborated effectively within a team environment.'
                    ]
                },
                {
                    type: 'Education',
                    title: 'School Leaving Certificate (Fachhochschulreife)',
                    company: 'Manfred von Ardenne Gymnasium, Berlin',
                    date: 'September 2016 ‚Äì July 2024',
                    details: [
                        'Key Subjects: Politics, English.'
                    ]
                },
                {
                    type: 'Work',
                    title: 'Service Staff (Selfie Gallery)',
                    company: 'Brands and Minds GmbH, Berlin',
                    date: 'June 2023 ‚Äì November 2023',
                    details: [
                        'Supported the planning and implementation of projects.',
                        'Delivered attentive service to gallery visitors.',
                        'Worked collaboratively with colleagues to ensure smooth operations.'
                    ]
                }
            ],
            skills: {
                languages: [
                    { name: 'German', level: 100, label: 'Native' },
                    { name: 'Vietnamese', level: 100, label: 'Native' },
                    { name: 'English', level: 85, label: 'Fluent (C1)' },
                    { name: 'French', level: 30, label: 'Basic Knowledge' }
                ],
                softSkills: ['Communication', 'Teamwork', 'Analytical Thinking', 'Time Management', 'Resilience', 'Customer Orientation'],
                it: ['MS Office (Excel, Word, PowerPoint)', 'HTML & CSS (Basic)', 'Python Course (Udemy: 100 Days of Python)', 'ICS2 Basic Cybersecurity']
            },
            interests: ['Travel & Cultural Exchange', 'Martial Arts', 'Athletics', 'Nutrition', 'Building PCs', 'Coding', 'Sudoku']
        };

        document.addEventListener('DOMContentLoaded', () => {
            
            function populateContact() {
                const container = document.getElementById('contact-info');
                container.innerHTML = `
                    <p class="flex items-center mb-2 text-gray-300"><span class="w-6 mr-2">üìû</span> ${cvData.contact.phone}</p>
                    <p class="flex items-center mb-2 text-gray-300"><span class="w-6 mr-2">‚úâÔ∏è</span> ${cvData.contact.email}</p>
                    <p class="flex items-center text-gray-300"><span class="w-6 mr-2">üìç</span> ${cvData.contact.address}</p>
                `;
            }

            function populateSummary() {
                document.querySelector('#summary p').textContent = cvData.summary;
            }

            function populateTimeline() {
                const container = document.getElementById('timeline-container');
                cvData.timeline.forEach(item => {
                    const itemDiv = document.createElement('div');
                    itemDiv.className = 'timeline-item relative mb-8 p-6 bg-white rounded-lg shadow-md transition-transform transform hover:scale-105';
                    const detailsList = item.details.map(detail => `<li>${detail}</li>`).join('');
                    itemDiv.innerHTML = `
                        <span class="absolute top-4 right-4 text-xs font-semibold uppercase px-2 py-1 rounded-full ${item.type === 'Work' ? 'bg-blue-100 text-blue-800' : 'bg-green-100 text-green-800'}">${item.type}</span>
                        <h3 class="text-xl font-bold text-gray-900">${item.title}</h3>
                        <p class="text-md font-semibold text-gray-600">${item.company}</p>
                        <p class="text-sm text-gray-500 mb-3">${item.date}</p>
                        <ul class="list-disc list-inside text-gray-700 space-y-1">${detailsList}</ul>
                    `;
                    container.appendChild(itemDiv);
                });
            }

            function populateSkills() {
                const itContainer = document.getElementById('it-skills-container');
                cvData.skills.it.forEach(skill => {
                    const skillTag = document.createElement('div');
                    skillTag.className = 'bg-gray-200 text-gray-800 text-sm font-medium px-4 py-2 rounded-full shadow-sm hover:bg-gray-300 transition-colors cursor-default';
                    skillTag.textContent = skill;
                    itContainer.appendChild(skillTag);
                });
            }

            function populateInterests() {
                const container = document.getElementById('interests-container');
                cvData.interests.forEach(interest => {
                    const interestTag = document.createElement('div');
                    interestTag.className = 'bg-white text-gray-800 font-medium px-5 py-3 rounded-lg shadow-md hover:bg-gray-100 transition-colors cursor-pointer';
                    interestTag.textContent = interest;
                    container.appendChild(interestTag);
                });
            }

            function createLanguageChart() {
                const ctx = document.getElementById('languageChart').getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: cvData.skills.languages.map(l => {
                            const words = l.name.split(' ');
                            if (words.length > 2 && l.name.length > 16) {
                                return words.join('\n');
                            }
                            return l.name;
                        }),
                        datasets: [{
                            label: 'Language Proficiency',
                            data: cvData.skills.languages.map(l => l.level),
                            backgroundColor: 'rgba(66, 153, 225, 0.6)', /* Muted blue */
                            borderColor: 'rgba(66, 153, 225, 1)',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        indexAxis: 'y',
                        maintainAspectRatio: false,
                        responsive: true,
                        scales: {
                            x: {
                                beginAtZero: true,
                                max: 100,
                                ticks: { display: false },
                                grid: { display: false }
                            },
                            y: {
                                grid: { display: false }
                            }
                        },
                        plugins: {
                            legend: { display: false },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        return cvData.skills.languages[context.dataIndex].label;
                                    }
                                }
                            }
                        }
                    }
                });
            }

            function createSoftSkillsChart() {
                const ctx = document.getElementById('softSkillsChart').getContext('2d');
                new Chart(ctx, {
                    type: 'radar',
                    data: {
                        labels: cvData.skills.softSkills.map(skill => {
                            const words = skill.split(' ');
                            if (words.length > 1 && skill.length > 16) {
                                return words.join('\n');
                            }
                            return skill;
                        }),
                        datasets: [{
                            label: 'Soft Skills',
                            data: cvData.skills.softSkills.map(() => Math.floor(Math.random() * 3) + 3), // Dummy data for visual representation (3-5)
                            fill: true,
                            backgroundColor: 'rgba(100, 181, 246, 0.3)', /* Lighter blue */
                            borderColor: 'rgb(66, 153, 225)', /* Muted blue */
                            pointBackgroundColor: 'rgb(66, 153, 225)',
                            pointBorderColor: '#fff',
                            pointHoverBackgroundColor: '#fff',
                            pointHoverBorderColor: 'rgb(66, 153, 225)'
                        }]
                    },
                    options: {
                        maintainAspectRatio: false,
                        responsive: true,
                        elements: {
                            line: {
                                borderWidth: 2
                            }
                        },
                        scales: {
                            r: {
                                beginAtZero: true,
                                max: 5,
                                ticks: { display: false },
                                pointLabels: {
                                    font: {
                                        size: 12
                                    },
                                    color: '#4a4a4a'
                                },
                                grid: {
                                    color: 'rgba(0, 0, 0, 0.1)'
                                }
                            }
                        },
                        plugins: {
                            legend: { display: false }
                        }
                    }
                });
            }
            
            populateContact();
            populateSummary();
            populateTimeline();
            populateSkills();
            populateInterests();
            createLanguageChart();
            createSoftSkillsChart();
        });
    </script>
</body>
